                    <section class="order-detail spad">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <% if (order) { %>
                                        <div class="order-summary">
                                            <div class="card mb-4 ms-3 me-3">
                                                <div class="card-body">
                                                    <h2 class="card-title mt-3">Order Details</h2>
                                                    <p class="card-text">
                                                        <span class="fw-bold">Order ID: </span>
                                                        <%= order.orderID %><br>
                                                            <span class="fw-bold">Order Date: </span>
                                                            <%= new Date(order.orderDate).toLocaleDateString() %><br>
                                                                <span class="fw-bold">Payment Method: </span>
                                                                <%= order.paymentMethod %><br>
                                                                    <span class="fw-bold">Payment Status : </span>
                                                                    <%= order.paymentStatus %>
                                                                        <% if (allDelivered) { %>
                                                                            <button id="download-invoice"
                                                                                class="btn btn-outline-secondary"
                                                                                data-order-id="<%= order._id %>">Download
                                                                                Invoice</button>
                                                                            <% } %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="card mb-3 ms-3 me-3">
                                                <div class="card-body">
                                                    <h5 class="card-title mt-3">Delivery Address</h5>
                                                    <p class="card-text">
                                                        <span class="fw-bold">Name: </span>
                                                        <%= order.address_id.addressName %>
                                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                            <span class="fw-bold">Email: </span>
                                                            <%= order.address_id.addressEmail %>
                                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                <span class="fw-bold">Mobile: </span>
                                                                <%= order.address_id.addressMobile %><br>
                                                    </p>
                                                    <p class="card-text">
                                                        <span class="fw-bold">Address Details: </span><br>
                                                        <%= order.address_id.addressHouse %>, <%=
                                                                order.address_id.addressStreet %>, <%=
                                                                    order.address_id.addressPost %>, <%=
                                                                        order.address_id.addressMark %>, <%=
                                                                            order.address_id.addressCity %>, <%=
                                                                                order.address_id.addressDistrict %>, <%=
                                                                                    order.address_id.addressState %>,
                                                                                    <%= order.address_id.addressPin %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="container">
                                                <h5 class="mt-3">Items:</h5>
                                                <div class="row">
                                                    <% order.items.forEach((item, index)=> { %>
                                                        <div class="col-md-6 mb-4">
                                                            <div class="card">
                                                                <div class="card-body">
                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <a
                                                                                href="/product_details/<%= item.product_id._id %>">
                                                                                <img src="/static/productImages/<%= item.productImage %>"
                                                                                    alt="<%= item.product_id.name %>"
                                                                                    class="img-fluid">
                                                                            </a>
                                                                            <h5>
                                                                                <%= item.product_id.productName %>
                                                                            </h5>
                                                                            <p>Color: <%= item.productColor %>
                                                                            </p>
                                                                            <p>Size: <%= item.productSize %>
                                                                            </p>
                                                                            <p>Quantity: <%= item.quantity %>
                                                                            </p>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <p>Price: &#8377;<%=
                                                                                    item.productDiscPrice.toFixed(2) %>
                                                                            </p>
                                                                            <p>Total: &#8377;<%= (item.productDiscPrice
                                                                                    * item.quantity).toFixed(2) %>
                                                                            </p>
                                                                            <% if (item.orderStatus !=='Canceled' ) { %>
                                                                                <p>Delivery Date: <%= new
                                                                                        Date(item.deliveryDate).toLocaleDateString()
                                                                                        %>
                                                                                </p>
                                                                                <% } %>
                                                                                    <p>Status: <%= item.orderStatus %>
                                                                                    </p>
                                                                                    <% if (['Pending', 'Processing'
                                                                                        , 'Dispatched' , 'Delivered'
                                                                                        , 'Canceled'
                                                                                        ].includes(item.orderStatus)) {
                                                                                        %>
                                                                                        <div class="status-line pb-2">
                                                                                            <div
                                                                                                class="status-ball <%= ['Pending', 'Delivered', 'Dispatched', 'Canceled'].includes(item.orderStatus) ? 'active' : '' %>">
                                                                                            </div>
                                                                                            <div
                                                                                                class="status-line-connector <%= ['Processing', 'Delivered', 'Pending'].includes(item.orderStatus) ? 'active' : '' %>">
                                                                                            </div>
                                                                                            <div
                                                                                                class="status-ball <%= ['Processing', 'Delivered', 'Dispatched'].includes(item.orderStatus) ? 'active' : '' %>">
                                                                                            </div>
                                                                                            <div
                                                                                                class="status-line-connector <%= item.orderStatus === 'Delivered' ? 'active' : '' %>">
                                                                                            </div>
                                                                                            <div
                                                                                                class="status-ball <%= item.orderStatus === 'Delivered' ? 'active' : item.orderStatus === 'Canceled' ? 'canceled' : '' %>">
                                                                                                <% if
                                                                                                    (item.orderStatus==='Delivered'
                                                                                                    ) { %>
                                                                                                    <i
                                                                                                        class="fa fa-check"></i>
                                                                                                    <% } else if
                                                                                                        (item.orderStatus==='Canceled'
                                                                                                        ) { %>
                                                                                                        <i
                                                                                                            class="fa fa-times"></i>
                                                                                                        <% } %>
                                                                                            </div>
                                                                                        </div>
                                                                                        <% } %>
                                                                                            <% if
                                                                                                (item.orderStatus==='Delivered'
                                                                                                ) { %>
                                                                                                <button
                                                                                                    class="btn btn-outline-warning btn-sm"
                                                                                                    data-toggle="modal"
                                                                                                    data-target="#returnModal"
                                                                                                    onclick="openReturnModal('<%= order._id %>','<%= item._id %>')">Return</button>
                                                                                                <% } else if
                                                                                                    (item.orderStatus
                                                                                                    !=='Canceled' &&
                                                                                                    item.orderStatus
                                                                                                    !=='Returned' &&
                                                                                                    item.orderStatus
                                                                                                    !=='Return requested'
                                                                                                    ) { %>
                                                                                                    <button
                                                                                                        class="btn btn-outline-danger btn-sm"
                                                                                                        onclick="cancelOrder('<%= item._id %>')">Cancel</button>
                                                                                                    <% } %>
                                                                                                        <% if
                                                                                                            (item.orderStatus==='Return requested'
                                                                                                            ||
                                                                                                            item.orderStatus==='Returned'
                                                                                                            ) { %>
                                                                                                            <p>Return
                                                                                                                Reason:
                                                                                                                <%= item.returnReason
                                                                                                                    %>
                                                                                                            </p>
                                                                                                            <% } %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% if ((index + 1) % 2===0) { %>
                                                            <div class="w-100"></div>
                                                            <% } %>
                                                                <% }) %>
                                                </div>
                                            </div>
                                        </div>
                                        <% } else { %>
                                            <p>Order not found.</p>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                    </section>
