    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function cancelOrder(itemId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'You won\'t be able to revert this!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/account/orders/order_details/cancel_order`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ itemId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire('Canceled!', 'Your order has been canceled.', 'success');
                                setTimeout(() => {
                                    location.reload();
                                }, 1000);
                            } else {
                                Swal.fire('Failed!', data.message || 'Failed to cancel the order.', 'error');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire('Error!', 'An error occurred. Please try again.', 'error');
                        });
                }
            });
        }
    </script>
    <script>
        function openReturnModal(orderId, itemId) {
            console.log(orderId);
            console.log(itemId);
            document.getElementById('returnOrderId').value = orderId;
            document.getElementById('returnItemId').value = itemId;
        }

        function submitReturn() {
            const orderId = document.getElementById('returnOrderId').value;
            const itemId = document.getElementById('returnItemId').value;
            const reason = document.getElementById('returnReason').value;

            fetch('/account/orders/order_details/return_order', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ orderId, itemId, reason })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Return Requested!', 'Your request to return was send.', 'success');
                    } else {
                        Swal.fire('Failed!', data.message || 'Failed to return the order.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Failed!', data.message || 'Failed to return the order.', 'error');
                });
        }
    </script>
    <script>
        document.getElementById('download-invoice').addEventListener('click', function () {
            const orderId = this.getAttribute('data-order-id');
            console.log(orderId);
            fetch(`/account/orders/order_details/invoice?id=${orderId}`)
                .then(response => response.blob())
                .then(blob => {
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = url;
                    a.download = `invoice-${orderId}.pdf`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                })
                .catch(() => alert('Error downloading invoice'));
        });
    </script>
