     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleSection(sectionId) {
            const sections = ['best-sellers', 'new-arrivals'];
            sections.forEach(section => {
                document.getElementById(section).style.display = section === sectionId ? 'flex' : 'none';
            });

            document.querySelectorAll('.filter__controls li').forEach(li => {
                li.classList.toggle('active', li.getAttribute('onclick').includes(sectionId));
            });
        }

    </script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const colorSelectors = document.querySelectorAll('.product__color__select input[type="radio"]');

            colorSelectors.forEach(radio => {
                radio.addEventListener('change', function () {
                    if (this.checked) {
                        const productItem = this.closest('.product__item');
                        const productId = productItem.querySelector('.add-cart').dataset.productId;
                        const section = this.name.split('-')[1];
                        const productImageElement = productItem.querySelector('.product__item__pic');
                        productImageElement.style.backgroundImage = `url('${this.dataset.imageUrl}')`;
                        this.closest('.product__color__select').querySelectorAll('label').forEach(label => label.classList.remove('active'));
                        this.closest('label').classList.add('active');
                        updatePrice(productItem, section, productId, this.dataset.price, this.dataset.discPrice);
                    }
                });
            });

            function updatePrice(productItem, section, productId, newPrice, newDiscPrice) {

                const priceElement = productItem.querySelector(`#${section}-price-${productId}`);
                const discPriceElement = productItem.querySelector(`#${section}-disc-price-${productId}`);

                if (priceElement && discPriceElement) {
                    discPriceElement.textContent = `₹${newDiscPrice}`;
                    priceElement.textContent = `₹${newPrice}`;
                } else {
                    console.error(`Price elements not found for product ${productId}`);
                }
            }

            // Initialize prices for all products
            document.querySelectorAll('input[type="radio"][name^="color-"]:checked').forEach(radio => {
                const productItem = radio.closest('.product__item');
                const section = radio.name.split('-')[1];
                const productId = radio.name.split('-')[2];
                updatePrice(productItem, section, productId, radio.dataset.price, radio.dataset.discPrice);
            });

            document.querySelectorAll('.add-cart').forEach(button => {
                button.addEventListener('click', async (event) => {
                    event.preventDefault();

                    const productId = button.getAttribute('data-product-id');
                    const section = button.getAttribute('data-section');
                    const quantity = 1;

                    const selectedColorElement = document.querySelector(`input[name="color-${section}-${productId}"]:checked`);
                    if (!selectedColorElement) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Please select a color'
                        });
                        return;
                    }
                    
                    const selectedColor = selectedColorElement.value;
                    const variantData = JSON.parse(selectedColorElement.getAttribute('data-variant'));
                    const subVariantData = variantData.subVariants[0];
                    const availableQuantity = subVariantData.quantity;

                    if (availableQuantity > 0) {
                        try {
                            const response = await fetch('/add_cart', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    productId,
                                    quantity,
                                    color: selectedColor,
                                    size: subVariantData.size,
                                    productImage: variantData.images[0],
                                    productPrice: variantData.price,
                                    productDiscPrice: variantData.discountPrice
                                })
                            });

                            const data = await response.json();
                            if (data.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Added to Cart',
                                    text: data.message,
                                    showConfirmButton: true,
                                    confirmButtonText: 'Go to Cart'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = '/cart';
                                    }
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: data.message
                                });
                            }
                        } catch (error) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: error.message
                            });
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Product is out of stock'
                        });
                    }
                });
            });
        });

    </script>


