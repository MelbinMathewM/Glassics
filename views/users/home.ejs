                                        data-product-id="<%= bestSeller._id %>" data-section="bestSeller">+ Add To Cart</a><br>
                                    <div class="product__color__select me-4 mb-3">
                                        <% bestSeller.variants.forEach((variant, index) => { %>
                                            <label for="pc-<%= bestSeller._id %>-<%= index %>"
                                                class="<%= index === 0 ? 'active' : '' %>"
                                                style="background-color: <%= variant.color %>">
                                                <input type="radio" name="color-bestSeller-<%= bestSeller._id %>"
                                                    id="pc-<%= bestSeller._id %>-<%= index %>" value="<%= variant.color %>"
                                                    data-variant="<%= JSON.stringify(variant) %>"
                                                    data-image-url="/static/productImages/<%= variant.images[0] %>"
                                                    data-price="<%= variant.price %>"
                                                    data-disc-price="<%= variant.discountPrice %>" <%= index === 0 ? 'checked' : '' %>>
                                            </label>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>                

